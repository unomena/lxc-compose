# PostgreSQL Server Configuration
# Customize these values for your environment

# PostgreSQL superuser password
POSTGRES_PASSWORD=postgres

# Additional admin user (optional)
ADMIN_USER=dbadmin
ADMIN_PASSWORD=dbadmin123

# Default application user
DEFAULT_APP_USER=appuser
DEFAULT_APP_PASSWORD=apppassword

# Space-separated list of databases to create
# Example: "myapp_dev myapp_test django_dev django_test flask_dev flask_test"
DATABASES="development testing production app_dev app_test"

# Application users in format "username:password username2:password2"
# These users will automatically get permissions on their named databases
# Example: "django:django123 flask:flask123 nodejs:node123"
APP_USERS="django:django123 flask:flask123 nodejs:node123"

# PostgreSQL configuration
# Uncomment and adjust based on your server resources
# POSTGRES_MAX_CONNECTIONS=200
# POSTGRES_SHARED_BUFFERS=256MB
# POSTGRES_EFFECTIVE_CACHE_SIZE=1GB
# POSTGRES_WORK_MEM=4MB

# Backup configuration (for future backup scripts)
BACKUP_DIR=/var/lib/postgresql/backups
BACKUP_RETENTION_DAYS=7

# Monitoring
ENABLE_MONITORING=true
LOG_SLOW_QUERIES=true
SLOW_QUERY_THRESHOLD=1000  # milliseconds